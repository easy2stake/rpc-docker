# BSC (Binance Smart Chain) Node Configuration
# cp env.template .env and configure before running
# docker compose up -d

# Docker Image (BSC geth fork)
# https://github.com/bnb-chain/bsc/pkgs/container/bsc
BSC_IMAGE=ghcr.io/bnb-chain/bsc:1.6.6

# Host path for chain data (used in volume mount)
# Leave unset to use $HOME/chain-data (resolved when you run docker compose)
# Set to a full path to override (e.g. /data/bsc-chain)
# HOST_DATADIR=$HOME/chain-data

# Network - set your external IP for P2P (required for incoming connections)
HTTP_PORT=8045
WS_PORT=8046
P2P_PORT=30307
PPROF_PORT=6065
METRICS_PORT=6161
MAX_PEERS=100
EXT_IP=

# Sync mode (full, snap, light)
SYNC_MODE=full
# History transactions - number of blocks to maintain tx index for (0 = entire history )
HISTORY_TRANSACTIONS=0

# RPC APIs
HTTP_API=eth,net,web3,debug
WS_API=eth,net,web3,debug

# RPC limits (0 = no limit)
TX_FEE_CAP=0
GAS_CAP=0
RPC_BATCH_MAX_SIZE=300000000
RPC_EVM_TIMEOUT=10s

# Tx pool
TXPOOL_LOCALS=0xA1e96Ecaab9d97Bd17583966963C486cf856B639
TXPOOL_PRICE_LIMIT=100000000
MINER_GASPRICE=50000000 # Miner (used for tx pool filtering)


# Performance (runtime / container)
CACHE=57344
GOGC=80
MEM_LIMIT=128g # RAM + swap will never exceed this limit
GO_MEM_LIMIT=128GiB # Go memory limit (used for GC)




